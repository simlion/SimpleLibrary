<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/img_error_tip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="@color/color_B0B0B0"
        android:textSize="13dp"
        android:text="@string/tip_network_error"
        android:id="@+id/text_error_tip"/>

    <Button
        android:layout_width="113dp"
        android:layout_height="28dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/shape_btn_code"
        android:text="@string/btn_refresh"
        android:textSize="12dp"
        android:textColor="@color/color_1F8ADB"
        android:id="@+id/btn_retry"/>

</LinearLayout>